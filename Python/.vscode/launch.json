    "version": "0.2.0",
    "configurations": [
        
        
        {
            
            "name": "Python: 当前文件",// 配置名称，将会在启动配置的下拉菜单中显示
            "type": "python",// 配置类型
            "request": "launch",// 请求配置类型，可以为launch（启动）或attach（附加）
            "program": "${file}", // 将要进行调试的程序的路径 
            "console": "integratedTerminal",//控制台
            "cwd": "${fileDirname}"// 调试程序时的工作目录，一般为${workspaceRoot}即代码所在目录 
        }
    ]
}